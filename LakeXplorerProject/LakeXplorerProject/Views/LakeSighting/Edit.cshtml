                                  <label asp-for="LakeId" class="control-label"></label>
                                  <select asp-for="LakeId" class="form-control" asp-items="ViewBag.Lake"></select>
                                  <span asp-validation-for="LakeId" class="text-danger"></span>  
                            </div>*@
       <div class="form-group">
    <label  class="control-label">Choose Lake</label>
    <div class="dropdown">
        <select asp-for="LakeId" class="form-control dropdown-select" id="lakes" asp-items="ViewBag.Lake"></select>
        <span asp-validation-for="LakeId" class="text-danger"></span>
        <div class="dropdown-arrow">&#9662;</div>
    </div>
</div>

                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                      
                    </div>

                    <div @*class="col-md-4 offset-4 text-center"*@>
                        <img id="ImageUrlPreview" style="height:250px; width:250px;" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                    <div style="height:100px;">

                    </div>
                </form>

            </div>
        </div>

    </div>
</div>


<script>
    document.getElementById("ImageFile").addEventListener("change", function (event) {
        var input = event.target;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("ImageUrlPreview").setAttribute("src", e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    });

   document.getElementById("lakes").addEventListener("change", function (event) {
