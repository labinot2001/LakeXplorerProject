@model Lake


<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-dark">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>

            <div class="col-md-4">
                <img  style="width:100%; height:100%;" src="@Model.Image" width="100%" alt="@Model.Name">
            </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                      
                     

                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>